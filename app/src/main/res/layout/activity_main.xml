<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.marcos.bluetoothtest.MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:text="Find Paired Devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_paired_devices"
        android:layout_below="@+id/sample_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <Button
        android:text="Find bluetooth devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_find_devices"
        android:layout_below="@+id/btn_paired_devices"
        android:layout_toRightOf="@+id/sample_text"
        android:layout_toEndOf="@+id/sample_text"
        android:layout_marginTop="27dp"
        android:clickable="true"/>

    <Button
        android:text="StartServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="133dp"
        android:id="@+id/btn_start_server"
        android:layout_below="@+id/btn_find_devices"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Start as Client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_client"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
